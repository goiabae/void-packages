do_install() {
		vdoc CHANGES
		vdoc DISCLAIMER.md
		vlicense LICENSE
		vdoc README.md
		vbin clamtk
		vman clamtk.1.gz
		vinstall clamtk.desktop 644 usr/share/applications
		vdoc credits.md
		vinstall images/clamtk.png 644 usr/share/icons/hicolor/128x128/apps
		# for now clamtk_300x300.png is ignored
		vinstall images/clamtk.xpm 644 usr/share/pixmaps
		vmkdir usr/share/perl5/vendor_perl/ClamTk
		vcopy lib/*.pm usr/share/perl5/vendor_perl/ClamTk
}
